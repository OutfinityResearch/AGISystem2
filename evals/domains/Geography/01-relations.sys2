@distanceFrom:distanceFrom graph place1 place2 distance
    # Distance between places
    @eid __Event
    @act __Role Action distanceFrom
    @ctx __Role Context Geography
    @p1 __Role Source $place1
    @p2 __Role Goal $place2
    @dist __Role Value $distance
    @result __Bundle $eid $act $ctx $p1 $p2 $dist
    return $result
end

