# History - Domain Relations
# REAL graph definitions for historical relationships

# ===== Temporal Relations =====

@occurredIn:occurredIn graph event period
    # Event occurred in historical period
    @eid __Event
    @act __Role Action occurredIn
    @ctx __Role Context History
    @evt __Role Theme $event
    @per __Role Time $period
    @result __Bundle $eid $act $ctx $evt $per
    return $result
end

@precedes:precedes graph event1 event2
    # Event precedes another chronologically
    @eid __Event
    @act __Role Action precedes
    @ctx __Role Context History
    @e1 __Role Theme $event1
    @e2 __Role Theme $event2
    @result __Bundle $eid $act $ctx $e1 $e2
    return $result
end

@contemporaneousWith:contemporaneousWith graph event1 event2
    # Events occurred at same time
    @eid __Event
    @act __Role Action contemporaneousWith
    @ctx __Role Context History
    @e1 __Role Theme $event1
