    return $concept
end

@Status:Status graph position
    # Social standing
    @pos __Role Position $position
    @type __Role Type SocialStatus
    @prestige __Role Dimension Prestige
    @relational __Role Nature RelativeRanking
    @concept __Bundle $pos $type $prestige $relational
    return $concept
end

@Role:Role graph position
    # Expected behavior pattern
    @pat __Role Position $position
    @type __Role Type SocialRole
    @behavioral __Role Content Expectations
    @normative __Role Nature Prescribed
    @concept __Bundle $pat $type $behavioral $normative
    return $concept
end

