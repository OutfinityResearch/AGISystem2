    return $result
end

@conqueredBy:conqueredBy graph territory conqueror
    # Territory conquered by conqueror
    @terr __Role Territory $territory
    @conq __Role Conqueror $conqueror
    @conquest __Role Action Conquest
    @result __Bundle $terr $conq $conquest
    return $result
end

