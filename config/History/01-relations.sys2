# History - Domain Relations
# REAL graph definitions for historical relationships

# ===== Temporal Relations =====

@occurredIn:occurredIn graph event period
    # Event occurred in historical period
    @evt __Role Event $event
    @per __Role Period $period
    @temporal __Role Relation TemporalLocation
    @result __Bundle $evt $per $temporal
    return $result
end

@precedes:precedes graph event1 event2
    # Event precedes another chronologically
    @e1 __Role Earlier $event1
    @e2 __Role Later $event2
    @chronological __Role Relation Precedence
    @result __Bundle $e1 $e2 $chronological
    return $result
end

@contemporaneousWith:contemporaneousWith graph event1 event2
    # Events occurred at same time
    @e1 __Role Event $event1
    @e2 __Role Event $event2
    @simultaneous __Role Relation Contemporaneous
    @result __Bundle $e1 $e2 $simultaneous
    return $result
end

# ===== Actor Relations =====

@ruled:ruled graph leader territory period
    # Leader ruled territory during period
    @lead __Role Ruler $leader
    @terr __Role Territory $territory
    @per __Role Period $period
    @governance __Role Relation Rule
    @result __Bundle $lead $terr $per $governance
    return $result
end

