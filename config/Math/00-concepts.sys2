@Figure:Figure graph shape
    # Geometric figure or shape
    @fig __Role Shape $shape
    @type __Role Type GeometricFigure
    @dimension __Role Context DimensionalSpace
    @concept __Bundle $fig $type $dimension
    return $concept
end

# ===== Calculus =====

@Sequence:Sequence graph ordered
    # Sequence as ordered list of elements
    @seq __Role OrderedList $ordered
    @type __Role Type Sequence
    @indexing __Role Property Indexed
    @domain __Role Domain NaturalNumbers
    @concept __Bundle $seq $type $indexing $domain
    return $concept
end

@Limit:Limit graph value
    # Limit value of sequence or function
    @lim __Role Value $value
    @type __Role Type LimitValue
    @convergence __Role Property Approached
    @concept __Bundle $lim $type $convergence
    return $concept
end

@Derivative:Derivative graph rate
    # Derivative as rate of change
    @deriv __Role RateOfChange $rate
    @type __Role Type Derivative
    @function __Role Context DifferentiableFunction
    @instantaneous __Role Property InstantaneousRate
    @concept __Bundle $deriv $type $function $instantaneous
    return $concept
end

@Integral:Integral graph accumulation
    # Integral as accumulation or area
    @integ __Role Accumulation $accumulation
    @type __Role Type Integral
    @function __Role Context IntegrableFunction
    @area __Role Interpretation Area
    @concept __Bundle $integ $type $function $area
    return $concept
end

# ===== Logic & Proof =====

@Proof:Proof graph argument
    # Mathematical proof
    @prf __Role Argument $argument
    @type __Role Type MathematicalProof
    @logical __Role Property LogicalReasoning
    @rigorous __Role Property Rigorous
    @concept __Bundle $prf $type $logical $rigorous
    return $concept
end

@Theorem:Theorem graph statement
    # Proven mathematical statement
    @thm __Role Statement $statement
    @type __Role Type ProvenStatement
    @proof __Role Support ProofExists
    @significance __Role Property Significant
    @concept __Bundle $thm $type $proof $significance
    return $concept
end

@Lemma:Lemma graph statement
    # Auxiliary proven statement
    @lem __Role Statement $statement
    @type __Role Type ProvenStatement
    @auxiliary __Role Property Auxiliary
    @support __Role Purpose SupportsTheorem
    @concept __Bundle $lem $type $auxiliary $support
    return $concept
end

@Axiom:Axiom graph statement
    # Self-evident truth or assumption
    @ax __Role Statement $statement
    @type __Role Type FoundationalStatement
    @selfEvident __Role Property SelfEvident
    @unprovable __Role Property AssumedTrue
    @concept __Bundle $ax $type $selfEvident $unprovable
    return $concept
end
