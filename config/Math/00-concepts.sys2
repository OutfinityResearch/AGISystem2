# Math - Domain Concepts
# Foundational mathematical concepts with proper graph semantics

# ===== Number Systems =====

@Number:Number graph entity
    # Number as abstract mathematical entity
    @ent __Role Entity $entity
    @type __Role Type MathematicalNumber
    @concept __Pair $ent $type
    return $concept
end

@Natural:Natural graph n
    # Natural number (ℕ: 0, 1, 2, 3, ...)
    @num __Role Number $n
    @type __Role Type NaturalNumber
    @property __Role Property NonNegativeInteger
    @concept __Bundle $num $type $property
    return $concept
end

@Integer:Integer graph n
    # Integer (ℤ: ..., -2, -1, 0, 1, 2, ...)
    @num __Role Number $n
    @type __Role Type Integer
    @property __Role Property WholeNumber
    @concept __Bundle $num $type $property
    return $concept
end

@Rational:Rational graph q
    # Rational number (ℚ: p/q where p,q ∈ ℤ, q ≠ 0)
    @num __Role Number $q
    @type __Role Type RationalNumber
    @property __Role Property Fraction
    @concept __Bundle $num $type $property
    return $concept
end

@Real:Real graph r
    # Real number (ℝ: rationals + irrationals)
    @num __Role Number $r
    @type __Role Type RealNumber
    @property __Role Property ContinuumElement
    @concept __Bundle $num $type $property
    return $concept
end

@Complex:Complex graph z
    # Complex number (ℂ: a + bi)
    @num __Role Number $z
    @type __Role Type ComplexNumber
    @form __Role Representation AlgebraicForm
    @concept __Bundle $num $type $form
    return $concept
end

# ===== Set Theory =====

@Set:Set graph collection
    # Set as collection of distinct elements
    @coll __Role Collection $collection
    @type __Role Type MathematicalSet
    @property __Role Property WellDefined
    @concept __Bundle $coll $type $property
    return $concept
end

@EmptySet:EmptySet graph set
    # Empty set (∅)
    @s __Role Set $set
    @property __Role Property NoElements
    @cardinality __Role Cardinality Zero
    @concept __Bundle $s $property $cardinality
    return $concept
end

@Universe:Universe graph set
    # Universal set containing all elements under consideration
    @s __Role Set $set
    @property __Role Property AllElements
    @scope __Role Context Domain
    @concept __Bundle $s $property $scope
    return $concept
end

# ===== Algebraic Structures =====

@Group:Group graph structure
    # Group: set with associative binary operation, identity, inverses
    @struct __Role Structure $structure
    @type __Role Type AlgebraicStructure
    @operation __Role Property BinaryOperation
    @identity __Role Property IdentityElement
    @inverse __Role Property InverseElements
    @associative __Role Property Associativity
    @concept __Bundle $struct $type $operation $identity
    return $concept
end

@Ring:Ring graph structure
    # Ring: abelian group + distributive multiplication
    @struct __Role Structure $structure
    @type __Role Type AlgebraicStructure
    @addition __Role Operation Addition
    @multiplication __Role Operation Multiplication
    @distributive __Role Property Distributivity
    @concept __Bundle $struct $type $addition $multiplication
    return $concept
end

@Field:Field graph structure
    # Field: ring where every non-zero element has multiplicative inverse
    @struct __Role Structure $structure
    @type __Role Type AlgebraicStructure
    @isRing __Role Property RingStructure
    @multiplicativeInverse __Role Property InverseExists
    @concept __Bundle $struct $type $isRing $multiplicativeInverse
    return $concept
end

@VectorSpace:VectorSpace graph space
    # Vector space over a field
    @sp __Role Space $space
    @type __Role Type AlgebraicStructure
    @field __Role Context ScalarField
    @addition __Role Operation VectorAddition
    @scalarMult __Role Operation ScalarMultiplication
    @concept __Bundle $sp $type $field $addition
    return $concept
end

@Vector:Vector graph element
    # Vector as element of vector space
    @vec __Role Element $element
    @type __Role Type VectorSpaceElement
    @space __Role Context VectorSpace
    @concept __Bundle $vec $type $space
    return $concept
end

@Matrix:Matrix graph array
    # Matrix as rectangular array of numbers
    @mat __Role Array $array
    @type __Role Type Matrix
    @rows __Role Dimension Rows
    @cols __Role Dimension Columns
    @concept __Bundle $mat $type $rows $cols
    return $concept
end

# ===== Functions =====

@Function:Function graph mapping
    # Function as mapping between sets
    @map __Role Mapping $mapping
    @type __Role Type Function
    @domain __Role Source Domain
    @codomain __Role Target Codomain
    @concept __Bundle $map $type $domain $codomain
    return $concept
end

@Bijection:Bijection graph function
    # Bijective function (one-to-one and onto)
    @func __Role Function $function
    @type __Role Type BijectiveFunction
    @injective __Role Property OneToOne
    @surjective __Role Property Onto
    @concept __Bundle $func $type $injective $surjective
    return $concept
end

@Injection:Injection graph function
    # Injective function (one-to-one)
    @func __Role Function $function
    @type __Role Type InjectiveFunction
    @property __Role Property OneToOne
    @concept __Bundle $func $type $property
    return $concept
end

@Surjection:Surjection graph function
    # Surjective function (onto)
    @func __Role Function $function
    @type __Role Type SurjectiveFunction
    @property __Role Property Onto
    @concept __Bundle $func $type $property
    return $concept
end

