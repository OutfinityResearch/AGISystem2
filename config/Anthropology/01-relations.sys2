    return $result
end

@inheritsFrom:inheritsFrom graph descendant ancestor
    # Cultural inheritance
    @desc __Role Descendant $descendant
    @anc __Role Ancestor $ancestor
    @cultural __Role Domain CulturalTransmission
    @result __Bundle $desc $anc $cultural
    return $result
end

