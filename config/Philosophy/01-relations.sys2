# Philosophy - Domain Relations
# Core-compatible graph macros for common philosophical relations.

@_:PhilosophyRelations isA PhilosophyRelations AbstractType

@believes:believes graph subject proposition
    @eid __Event
    @act __Role Action believes
    @s __Role Agent $subject
    @p __Role Content $proposition
    @ctx __Role Context Philosophy
    @result __Bundle $eid $act $s $p $ctx
    return $result
end

@knows:knows graph subject proposition
    @eid __Event
    @act __Role Action knows
    @s __Role Agent $subject
    @p __Role Content $proposition
    @ctx __Role Context Philosophy
    @result __Bundle $eid $act $s $p $ctx
    return $result
end

@justifies:justifies graph evidence claim
    @eid __Event
    @act __Role Action justifies
    @e __Role Cause $evidence
    @c __Role Result $claim
    @ctx __Role Context Philosophy
    @result __Bundle $eid $act $e $c $ctx
    return $result
end

@entails:entails graph premises conclusion
    @prem __Role Theme $premises
    @concl __Role Result $conclusion
    @result Implies $prem $concl
    return $result
end

@contradicts:contradicts graph a b
    @result And $a (Not $b)
    return $result
end

@arguesFor:arguesFor graph arg claim
    @eid __Event
    @act __Role Action arguesFor
    @a __Role Theme $arg
    @c __Role Result $claim
    @ctx __Role Context Philosophy
    @result __Bundle $eid $act $a $c $ctx
    return $result
end

@hasObligation:hasObligation graph agent obligation
    @eid __Event
    @act __Role Action hasObligation
    @a __Role Theme $agent
    @o __Role Attribute $obligation
    @ctx __Role Context Philosophy
    @result __Bundle $eid $act $a $o $ctx
    return $result
end
